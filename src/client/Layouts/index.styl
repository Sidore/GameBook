

@font-face {
    font-family: Roboto;
    font-style: normal;
    src: url("https://fonts.googleapis.com/css?family=Roboto&display=swap");
  }

* {
    margin: 0;
    padding: 0;
    font-family: 'Roboto', sans-serif;
    color: #222;
}

body {
    height 100vh;
}

#app-container {
    width: 100%;
    height: 100%;
    }

.root-div {
    width: 100%;
    height: 100%;
    display: flex;   
}

.nav-bar {
    &__ul {
            background: #222;
            display: flex;
            justify-content: space-around;
            padding: 10px
        }
    
    &__link-container {
            list-style none;
            padding: 10px 20px;
            background: #444;
            display: flex;
            border-radius: 5px;
            cursor pointer
            transition: all .5s

            &:hover {
                background: #333;
                }
        }
    
    &__link-a {
            text-decoration: none;
            color: #eee;
        }

    }